# -*- coding: utf-8 -*-

print('digite o 1° numero: ')
n1 = input()

print('coloque o sinal matemático desejado: ')
sinal = input ()

print('digite o 2° numero: ')
n2 = input()

if sinal == '+':
    op = n1+n2

elif sinal == "-":
    op = n1 - n2
 
elif sinal == "/":
    op = n1 + n2
 
elif sinal == "*":
    op = n1 * n2
 
else:
    print("Sinal inválido.")
 
print(op)
